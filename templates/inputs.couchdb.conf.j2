# Read CouchDB Stats from one or more servers
[[inputs.couchdb]]
  ## Works with CouchDB stats endpoints out of the box
  ## Multiple Hosts from which to read CouchDB stats:
  hosts = [ {% for i in telegraf_inputs_couchdb_hosts|d([]) %}"{{ i }}"{{ ', ' if not loop.last }}{% endfor %} ]

  ## Use HTTP Basic Authentication.
  {{ '#' if telegraf_inputs_couchdb_basic_username is not defined }}basic_username = "{{ telegraf_inputs_couchdb_basic_username|d() }}"
  {{ '#' if telegraf_inputs_couchdb_basic_password is not defined }}basic_password = "{{ telegraf_inputs_couchdb_basic_password|d() }}"
