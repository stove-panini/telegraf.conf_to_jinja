# Gather packets and bytes counters from Linux ipsets
[[inputs.ipset]]
  ## By default, we only show sets which have already matched at least 1 packet.
  ## set include_unmatched_sets = true to gather them all.
  include_unmatched_sets = {{ telegraf_inputs_ipset_include_unmatched_sets|d()|bool|lower }}
  ## Adjust your sudo settings appropriately if using this option ("sudo ipset save")
  use_sudo = {{ telegraf_inputs_ipset_use_sudo|d()|bool|lower }}
  ## The default timeout of 1s for ipset execution can be overridden here:
  {{ '#' if telegraf_inputs_ipset_timeout is not defined else '' }}timeout = "{{ telegraf_inputs_ipset_timeout|d() }}"
