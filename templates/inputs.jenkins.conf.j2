# Read jobs and cluster metrics from Jenkins instances
[[inputs.jenkins]]
  ## The Jenkins URL in the format "schema://host:port"
  url = "{{ telegraf_inputs_jenkins_url|d() }}"
  {{ '#' if telegraf_inputs_jenkins_username is not defined }}username = "{{ telegraf_inputs_jenkins_username|d() }}"
  {{ '#' if telegraf_inputs_jenkins_password is not defined }}password = "{{ telegraf_inputs_jenkins_password|d() }}"

  ## Set response_timeout
  response_timeout = "{{ telegraf_inputs_jenkins_response_timeout|d() }}"

  ## Optional TLS Config
  {{ '#' if telegraf_inputs_jenkins_tls_ca is not defined }}tls_ca = "{{ telegraf_inputs_jenkins_tls_ca|d() }}"
  {{ '#' if telegraf_inputs_jenkins_tls_cert is not defined }}tls_cert = "{{ telegraf_inputs_jenkins_tls_cert|d() }}"
  {{ '#' if telegraf_inputs_jenkins_tls_key is not defined }}tls_key = "{{ telegraf_inputs_jenkins_tls_key|d() }}"
  ## Use SSL but skip chain & host verification
  {{ '#' if telegraf_inputs_jenkins_insecure_skip_verify is not defined }}insecure_skip_verify = {{ telegraf_inputs_jenkins_insecure_skip_verify|d()|bool|lower }}

  ## Optional Max Job Build Age filter
  ## Default 1 hour, ignore builds older than max_build_age
  {{ '#' if telegraf_inputs_jenkins_max_build_age is not defined }}max_build_age = "{{ telegraf_inputs_jenkins_max_build_age|d() }}"

  ## Optional Sub Job Depth filter
  ## Jenkins can have unlimited layer of sub jobs
  ## This config will limit the layers of pulling, default value 0 means
  ## unlimited pulling until no more sub jobs
  {{ '#' if telegraf_inputs_jenkins_max_subjob_depth is not defined }}max_subjob_depth = {{ telegraf_inputs_jenkins_max_subjob_depth|d() }}

  ## Optional Sub Job Per Layer
  ## In workflow-multibranch-plugin, each branch will be created as a sub job.
  ## This config will limit to call only the lasted branches in each layer,
  ## empty will use default value 10
  {{ '#' if telegraf_inputs_jenkins_max_subjob_per_layer is not defined }}max_subjob_per_layer = {{ telegraf_inputs_jenkins_max_subjob_per_layer|d() }}

  ## Jobs to exclude from gathering
  {{ '#' if telegraf_inputs_jenkins_job_exclude is not defined }}job_exclude = [ {% for i in telegraf_inputs_jenkins_job_exclude|d([]) %}"{{ i }}"{{ ', ' if not loop.last }}{% endfor %} ]

  ## Nodes to exclude from gathering
  {{ '#' if telegraf_inputs_jenkins_node_exclude is not defined }}node_exclude = [ {% for i in telegraf_inputs_jenkins_node_exclude|d([]) %}"{{ i }}"{{ ', ' if not loop.last }}{% endfor %} ]

  ## Worker pool for jenkins plugin only
  ## Empty this field will use default value 5
  {{ '#' if telegraf_inputs_jenkins_max_connections is not defined }}max_connections = {{ telegraf_inputs_jenkins_max_connections|d() }}
