# Read JMX metrics from a Jolokia REST proxy endpoint
[[inputs.jolokia2_proxy]]
  {{ '#' if telegraf_inputs_jolokia2_proxy_default_tag_prefix      is not defined }}default_tag_prefix      = "{{ telegraf_inputs_jolokia2_proxy_default_tag_prefix     |d() }}"
  {{ '#' if telegraf_inputs_jolokia2_proxy_default_field_prefix    is not defined }}default_field_prefix    = "{{ telegraf_inputs_jolokia2_proxy_default_field_prefix   |d() }}"
  {{ '#' if telegraf_inputs_jolokia2_proxy_default_field_separator is not defined }}default_field_separator = "{{ telegraf_inputs_jolokia2_proxy_default_field_separator|d() }}"

  ## Proxy agent
  url = "{{ telegraf_inputs_jolokia2_proxy_url|d() }}"
  {{ '#' if telegraf_inputs_jolokia2_proxy_username is not defined }}username = "{{ telegraf_inputs_jolokia2_proxy_username|d() }}"
  {{ '#' if telegraf_inputs_jolokia2_proxy_password is not defined }}password = "{{ telegraf_inputs_jolokia2_proxy_password|d() }}"
  {{ '#' if telegraf_inputs_jolokia2_proxy_response_timeout is not defined }}response_timeout = "{{ telegraf_inputs_jolokia2_proxy_response_timeout|d() }}"

  ## Optional TLS config
  {{ '#' if telegraf_inputs_jolokia2_proxy_tls_ca   is not defined }}tls_ca   = "{{ telegraf_inputs_jolokia2_proxy_tls_ca  |d() }}"
  {{ '#' if telegraf_inputs_jolokia2_proxy_tls_cert is not defined }}tls_cert = "{{ telegraf_inputs_jolokia2_proxy_tls_cert|d() }}"
  {{ '#' if telegraf_inputs_jolokia2_proxy_tls_key  is not defined }}tls_key  = "{{ telegraf_inputs_jolokia2_proxy_tls_key |d() }}"
  {{ '#' if telegraf_inputs_jolokia2_proxy_insecure_skip_verify is not defined }}insecure_skip_verify = {{ telegraf_inputs_jolokia2_proxy_insecure_skip_verify|d()|bool|lower }}

  ## Add proxy targets to query
  {{ '#' if telegraf_inputs_jolokia2_proxy_default_target_username is not defined }}default_target_username = "{{ telegraf_inputs_jolokia2_proxy_default_target_username|d() }}"
  {{ '#' if telegraf_inputs_jolokia2_proxy_default_target_password is not defined }}default_target_password = "{{ telegraf_inputs_jolokia2_proxy_default_target_password|d() }}"
  [[inputs.jolokia2_proxy.target]]
  url = "{{ telegraf_inputs_jolokia2_proxy_url|d() }}"
  {{ '#' if telegraf_inputs_jolokia2_proxy_username is not defined }}username = "{{ telegraf_inputs_jolokia2_proxy_username|d() }}"
  {{ '#' if telegraf_inputs_jolokia2_proxy_password is not defined }}password = "{{ telegraf_inputs_jolokia2_proxy_password|d() }}"

  ## Add metrics to read
  [[inputs.jolokia2_proxy.metric]]
  name  = "{{ telegraf_inputs_jolokia2_proxy_name |d() }}"
  mbean = "{{ telegraf_inputs_jolokia2_proxy_mbean|d() }}"
  paths = [ {% for i in telegraf_inputs_jolokia2_proxy_paths|d([]) %}"{{ i }}"{{ ', ' if not loop.last }}{% endfor %} ]
