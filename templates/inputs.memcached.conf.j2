# Read metrics from one or many memcached servers
[[inputs.memcached]]
  ## An array of address to gather stats about. Specify an ip on hostname
  ## with optional port. ie localhost, 10.0.0.1:11211, etc.
  servers = [ {% for i in telegraf_inputs_memcached_servers|d([]) %}"{{ i }}"{{ ', ' if not loop.last }}{% endfor %} ]
  {{ '#' if telegraf_inputs_memcached_unix_sockets is not defined }}unix_sockets = [ {% for i in telegraf_inputs_memcached_unix_sockets|d([]) %}"{{ i }}"{{ ', ' if not loop.last }}{% endfor %} ]
