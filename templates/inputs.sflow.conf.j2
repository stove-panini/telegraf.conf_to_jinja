# SFlow V5 Protocol Listener
[[inputs.sflow]]
  ## Address to listen for sFlow packets.
  ##   example: service_address = "udp://:6343"
  ##            service_address = "udp4://:6343"
  ##            service_address = "udp6://:6343"
  service_address = "{{ telegraf_inputs_sflow_service_address|d() }}"

  ## Set the size of the operating system's receive buffer.
  ##   example: read_buffer_size = "64KiB"
  {{ '#' if telegraf_inputs_sflow_read_buffer_size is not defined else '' }}read_buffer_size = "{{ telegraf_inputs_sflow_read_buffer_size|d() }}"
