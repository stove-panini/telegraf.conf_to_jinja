# Read metrics from VMware vCenter
[[inputs.vsphere]]
  ## List of vCenter URLs to be monitored. These three lines must be uncommented
  ## and edited for the plugin to work.
  vcenters = [ {% for i in telegraf_inputs_vsphere_vcenters|d([]) %}"{{ i }}"{{ ', ' if not loop.last }}{% endfor %} ]
  username = "{{ telegraf_inputs_vsphere_username|d() }}"
  password = "{{ telegraf_inputs_vsphere_password|d() }}"

  ## VMs
  ## Typical VM metrics (if omitted or empty, all metrics are collected)
  {{ '#' if telegraf_inputs_vsphere_vm_include is not defined }}vm_include = [ {% for i in telegraf_inputs_vsphere_vm_include|d([]) %}"{{ i }}"{{ ', ' if not loop.last }}{% endfor %} ]
  {{ '#' if telegraf_inputs_vsphere_vm_exclude is not defined }}vm_exclude = [ {% for i in telegraf_inputs_vsphere_vm_exclude|d([]) %}"{{ i }}"{{ ', ' if not loop.last }}{% endfor %} ]
  vm_metric_include = [ {% for i in telegraf_inputs_vsphere_vm_metric_include|d([]) %}"{{ i }}"{{ ', ' if not loop.last }}{% endfor %} ]
    "cpu.demand.average",
    "cpu.idle.summation",
    "cpu.latency.average",
    "cpu.readiness.average",
    "cpu.ready.summation",
    "cpu.run.summation",
    "cpu.usagemhz.average",
    "cpu.used.summation",
    "cpu.wait.summation",
    "mem.active.average",
    "mem.granted.average",
    "mem.latency.average",
    "mem.swapin.average",
    "mem.swapinRate.average",
    "mem.swapout.average",
    "mem.swapoutRate.average",
    "mem.usage.average",
    "mem.vmmemctl.average",
    "net.bytesRx.average",
    "net.bytesTx.average",
    "net.droppedRx.summation",
    "net.droppedTx.summation",
    "net.usage.average",
    "power.power.average",
    "virtualDisk.numberReadAveraged.average",
    "virtualDisk.numberWriteAveraged.average",
    "virtualDisk.read.average",
    "virtualDisk.readOIO.latest",
    "virtualDisk.throughput.usage.average",
    "virtualDisk.totalReadLatency.average",
    "virtualDisk.totalWriteLatency.average",
    "virtualDisk.write.average",
    "virtualDisk.writeOIO.latest",
    "sys.uptime.latest",
  ]
  {{ '#' if telegraf_inputs_vsphere_vm_metric_exclude is not defined }}vm_metric_exclude = [ {% for i in telegraf_inputs_vsphere_vm_metric_exclude|d([]) %}"{{ i }}"{{ ', ' if not loop.last }}{% endfor %} ]
